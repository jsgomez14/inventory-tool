WindowManager:
    MainWindow:
    OutsView:
    EntriesView:
    CreateOut:
    CreateEntry:

<MainWindow>:
    name: "main"
    ScrollView:
        Stock:

    MDRectangleFlatButton:
        text: "Ver Salidas"
        pos_hint: {'center_x':0.3, 'center_y':0.2}
        size_hint_x: None
        on_release:
            app.root.current = "outs_view"
            root.manager.transition.direction = "right"
    MDRectangleFlatButton:
        text: "Ver Entradas"
        pos_hint: {'center_x':0.7, 'center_y':0.2}
        size_hint_x: None
        on_release:
            app.root.current = "entries_view"
            root.manager.transition.direction = "left"
    MDRectangleFlatButton:
        text: "Crear Salida"
        pos_hint: {'center_x':0.3, 'center_y':0.1}
        size_hint_x: None
        on_release:
            app.root.current = "create_out"
            root.manager.transition.direction = "right"
    MDRectangleFlatButton:
        text: "Crear Entrada"
        pos_hint: {'center_x':0.7, 'center_y':0.1}
        size_hint_x: None
        on_release:
            app.root.current = "create_entry"
            root.manager.transition.direction = "left"

<OutsView>:
    name: "outs_view"
    ScrollView:
        Out:
    MDRectangleFlatButton:
        text: "Regresar"
        pos_hint: {'center_x':0.5, 'center_y':0.1}
        size_hint_x: None
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "left"

<EntriesView>:
    name: "entries_view"
    ScrollView:
        Entry:
    MDRectangleFlatButton:
        text: "Regresar"
        pos_hint: {'center_x':0.5, 'center_y':0.1}
        size_hint_x: None
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

<CreateOut>:
    name: "create_out"
    MDGridLayout:
        cols:1
        OutForm:
        MDRectangleFlatButton:
            text: "Regresar"
            pos_hint: {'center_x':0.5, 'center_y':0.1}
            size_hint_x: None
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "left"

<CreateEntry>:
    name: "create_entry"
    MDGridLayout:
        cols:1
        EntryForm:
        MDRectangleFlatButton:
            text: "Regresar"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"